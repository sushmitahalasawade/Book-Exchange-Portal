<!DOCTYPE html>
<html>
<head>
    <title>Book Exchange Platform - Available Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>    
    
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        .book {
            border: 1px solid #ccc;
            padding: 10px;
            margin: 10px 0;
        }
        nav {
            margin-bottom: 20px;
        }
        nav a {
            margin-right: 15px;
            text-decoration: none;
            color: #333;
        }
    </style>
</head>
<body class="p-3 mb-2 bg-info">
    <!-- <div id="currentDateTime"></div> -->
    <div>
        <label>Batch of IFT 458 Fall 2023 </label>
        <img src="/img/logo.png" alt="Student Image" width="50" height="40">
    </div>
    <div>
        <label>Server: </label>
        <div id="currentDateTime"></div>
        <div>Your IP address is: <span id="ip-address"></span></div>
    </div>
    <h4>Student Information</h4>

    <!-- Student Image -->
    <div>
        <label>Student Image:</label>
        <img src="/img/users/user.png" alt="Student Image" width="100" height="100">
    </div>

    <!-- Student Name -->
    <div>
        <label>Student Name:</label>
        <span>Sushmita Prafull Halasawade</span>
    </div>

    <!-- Student Email -->
    <div>
        <label>Student Email:</label>
        <span>shalasaw@asu.edu</span>
    </div>

    <!-- Student ID -->
    <div>
        <label>Student ID:</label>
        <span>1226584322</span>
    </div>

    <!-- Course Number -->
    <div>
        <label>Course #:</label>
        <span>IFT554</span>
    </div>
 
    <script>
        const dateTimeElement = document.getElementById('currentDateTime');
        const currentDateTime = new Date().toLocaleString();
 
        dateTimeElement.textContent = currentDateTime;
    </script>

    <!-- <h1>Your IP address is: <span id="ip-address"></span></h1> -->
    
    <script>
        fetch('https://api.ipify.org?format=json')
            .then(response => response.json())
            .then(data => {
                document.getElementById('ip-address').textContent = data.ip;
            })
            .catch(error => {
                console.error('Error fetching IP address:', error);
            });
    </script>
    <header>
        <h1>Book Exchange</h1>
        <nav>
            <% if (user) { %>
                Welcome, <%= user.username %>!
                <a href="/logout">Logout</a>
            <% } else { %>
                <a href="/register">Register</a>
                <a href="/login">Login</a>
            <% } %>
        </nav>
    </header>

    <section>
        <h2>Available Books for Exchange:</h2>
        <% if (books && books.length > 0) { %>
            <% books.forEach(function(book) { %>
                <div class="book">
                    <h3><%= book.title %></h3>
                    <p>Author: <%= book.author %></p>
                    <p>Genre: <%= book.genre %></p>
                    <p>Description: <%= book.description %></p>
                    <% if (user && user._id !== book.ownerId) { %>
                        <button><a href="/request-exchange/<%= book._id %>">Request Exchange</a></button>
                    <% } %>
                </div>
            <% }) %>
        <% } else { %>
            <p>No books available for exchange currently.</p>
        <% } %>
    </section>

    <footer>
        <p>Book Exchange Platform &copy; 2023</p>
    </footer>
</body>
</html>
